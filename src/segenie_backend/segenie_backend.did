type Portal = record {
    "id": nat;
    "name": text;
    "description": text;
    "image_url": opt text;
    "creator": principal;
};

type Creator = record {
    "principal": principal;
    "name": text;
};

service : {
    "create_portal": (text, text) -> (text);
    "update_portal_metadata": (nat, text, text, opt text) -> (text);
    "get_portal": (nat) -> (opt Portal);
    "set_creator_metadata": (text) -> (text);
    "get_creator_metadata": () -> (opt Creator);
}
